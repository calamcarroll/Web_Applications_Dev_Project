<div class="jumbotron text-center">
    <h1>Time to create a program</h1>

    <p>{{ message }}</p>

    <div ng-controller="addProgramsController" id="addPrograms">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="addProgram()"
                      style="margin-top:30px;">
                    <h3>Add a new Program</h3>

                    <div class="form-group" align="center">
                        <input type="text"
                               id="MuscleType"
                               class="form-control"
                               placeholder="Muscle Type"
                               ng-model="formData.MuscleType"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>


                    <div class="form-group" align="center">
                        <input type="text"
                               id="ExerciseName"
                               class="form-control"
                               placeholder="Exercise Name"
                               ng-model="formData.ExerciseName"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               id="Sets"
                               class="form-control"
                               placeholder="Sets"
                               ng-model="formData.Sets"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               id="Reps"
                               class="form-control"
                               placeholder="Reps"
                               ng-model="formData.Reps"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               id="RestTime"
                               class="form-control"
                               placeholder="Rest Time (Seconds)"
                               ng-model="formData.RestTime"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               id="Weight"
                               class="form-control"
                               placeholder="Weight (kg)"
                               ng-model="formData.Weight"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>


                    <button type="submit" id="submit" class="btn btn-primary">Create</button>
                </form>

            </div>
        </div>
</div>