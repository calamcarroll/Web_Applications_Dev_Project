<div class="jumbotron text-center">
    <h1>Time to make a diet</h1>

    <p>{{ message }}</p>

    <div ng-controller="addDietController"  id="addDietId">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="addDiet()"
                      style="margin-top:30px;">
                    <h3>Add a new diet</h3>

                    <div class="form-group" align="center">
                        <input type="number"
                               id="Protein"
                               class="form-control"
                               placeholder="Protein"
                               ng-model="formData.Protein"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>

                    <div class="form-group" align="center">
                        <input type="number"
                               id="Fats"
                               class="form-control"
                               placeholder="Fats"
                               ng-model="formData.Fats"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               id="Carbs"
                               class="form-control"
                               placeholder="Carbs"
                               ng-model="formData.Carbs"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               id="numMeals"
                               class="form-control"
                               placeholder="Meal Number"
                               ng-model="formData.numMeals"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="text"
                               id="MealType"
                               class="form-control"
                               placeholder="Meal Type"
                               ng-model="formData.MealType"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               id="MealCalories"
                               class="form-control"
                               placeholder="Meal Calories"
                               ng-model="formData.MealCalories"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               id="MealTime"
                               class="form-control"
                               placeholder="Meal Time"
                               ng-model="formData.MealTime"
                               ng-style="{'width': 500 + 'px'}"
                               required="true"
                               step="0.01">
                    </div>
                    <button type="submit"  id="submit" class="btn btn-primary">Create</button>
                </form>

            </div>
        </div>
    </div>